<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gem Calculator"
        android:gravity="center"
        android:textSize="30dp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:background="@drawable/marq"
                android:alpha="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Need"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/opaqueBlack"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:text="Have"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="5dp"
                android:background="@color/opaqueBlack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flawless_royal"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/need_flawless_royal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
            <EditText
                android:id="@+id/have_flawless_royal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/royal"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/need_royal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false"/>
            <EditText
                android:id="@+id/have_royal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flawless_imperial"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/need_flawless_imperial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
            <EditText
                android:id="@+id/have_flawless_imperial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/imperial"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/need_imperial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
            <EditText
                android:id="@+id/have_imperial"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/marq"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/need_marquise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
            <EditText
                android:id="@+id/have_marquise"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="1dp"
                android:background="@color/opaquerBlack"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:gravity="center"
                android:cursorVisible="false" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ImageView
            android:background="@drawable/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_margin="1dp"
            android:text="0"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/gold_display"
            android:background="@color/opaquerBlack"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"/>
</LinearLayout>